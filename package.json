{
  "name": "delta",
  "version": "0.0.1",
  "description": "A service to keep specified Kubernetes custom resources enforced and updated",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "nyc --reporter=html --reporter=text mocha ",
    "test:debug": "mocha --inspect-brk",
    "check-coverage": "nyc check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "lint": "npx npm-run-all eslint dockerlint jsonlint yamllint markdownlint shlint",
    "eslint": "npx eslint src/index.js",
    "dockerlint": "npx dockerlint Dockerfile",
    "jsonlint": "npx jsonlint --quiet build/viewTemplate.json",
    "yamllint": "npx yamllint .travis.yml",
    "markdownlint": "npx markdownlint README.md docs/",
    "shlint": "npx shellcheck build/*.sh sh/*.sh"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:razee-io/razeedeploy-delta.git"
  },
  "contributors": [
    {
      "name": "Alex Lewitt"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@razee/kubernetes-util": "^0.1.3",
    "axios": "^0.19.2",
    "bunyan": "^1.8.14",
    "deepmerge": "^4.2.2",
    "fs-extra": "^9.0.1",
    "handlebars": "^4.7.6",
    "js-yaml": "^3.14.0",
    "minimist": "^1.2.5",
    "object-path": "^0.11.4",
    "request-promise-native": "^1.0.8",
    "touch": "^3.1.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "dockerlint": "^0.3.9",
    "eslint": "^7.5.0",
    "jsonlint": "^1.6.3",
    "markdownlint-cli": "^0.23.2",
    "mocha": "^8.0.1",
    "nock": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "shellcheck": "^0.4.2",
    "sinon": "^9.0.2",
    "yaml-lint": "^1.2.4"
  }
}
